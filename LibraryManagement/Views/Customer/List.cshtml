@using LibraryManagement.ViewModels;
@model IEnumerable<CustoerViewModel>
    <a class="btn btn-success mt-5" asp-controller="Customer" asp-action="Create">

        Create new customer
    </a>
    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Borrowed books count</th>
                <th>Edit customer</th>
                <th>Delete customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Custvm in Model)
            {
            <tr>
                <td>@Custvm.Customer.CustomerId</td>
                <td>@Custvm.Customer.Name </td>
                <td>@Custvm.BookCount</td>

                <td><a class="btn btn-info" asp-area="" asp-controller="Customer" asp-action="Update" asp-route-id="@Custvm.Customer.CustomerId">Edit</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Customer" asp-action="Delete" asp-route-id="@Custvm.Customer.CustomerId">Delete</a></td>

            </tr>
            }



        </tbody>
       
        </table>