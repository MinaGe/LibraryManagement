@model IEnumerable<LibraryManagement.Models.Book>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auther.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.Name)
            </th>
            <th>Return </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Auther.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>

            <td>
                <a class="btn btn-success" asp-area="" asp-controller="Return" asp-action="ReturnABook" asp-route-bookId="@item.BookId">Return</a>
            </td>


        </tr>
}
    </tbody>
</table>
